{
  "expo": {
    "name": "Khair Labs - Qibla Finder",
    "slug": "qibla-finder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.khairlabs.qibla",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to calculate the Qibla direction."
      }
    },
    "android": {
      "package": "org.khairlabs.qibla",
      "adaptiveIcon": {
        "foregroundImage": "./assets/generated/android/adaptive/foreground.png",
        "backgroundImage": "./assets/generated/android/adaptive/background.png"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": []
  }
}